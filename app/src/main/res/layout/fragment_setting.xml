<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SettingFragment">

    <LinearLayout
        android:id="@+id/lltitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:padding="4dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/group_selected"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/lato"
            android:text="Về chúng tôi"
            android:textColor="@color/black"
            android:textSize="26sp" />
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lltitle">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/bg_img"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            android:contentDescription="TODO" />
        <ImageView
            android:id="@+id/flag"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/flag"
            android:layout_marginBottom="10dp"
            android:contentDescription="TODO"
            android:layout_margin="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="36sp"
                android:text="Chúng tôi có trụ sở tại"
                android:textColor="@color/black"
                android:fontFamily="@font/lato"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="Trường Đại học Thủy Lợi, HN"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/lato"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/lato"
                android:layout_marginBottom="30dp"
                android:text="Ngôi trường đã liên tiếp nhận được các giải thưởng cao quý trong các lĩnh vực nhiều năm. "
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="440dp"
                android:background="@color/black"
                android:layout_marginVertical="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/lato"
                    android:paddingHorizontal="25dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold"
                    android:textSize="27sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Chúng tôi có sứ mệnh phát hiện nông sản giả mạo và mầm bệnh của giống cây trồng tại Việt Nam"/>
                <TextView
                    android:layout_width="400dp"
                    android:layout_height="100dp"
                    android:textColor="#7F8489"
                    android:fontFamily="@font/lato"
                    android:paddingHorizontal="45dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Chúng tôi tin rằng đã đến lúc mọi người đều có thể phát hiện sâu bệnh trên các giống cây trồng tại Việt Nam"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Câu chuyện của chúng tôi"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/lato"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:text="Từ sự nhận thức về nhu cầu ngày càng tăng của thị trường đối với các loại nông sản quý hiếm tại Việt Nam, chúng tôi nhận ra rằng việc nhận dạng và phân biệt sản phẩm thật giả cũng như ứng phó với tỷ lệ thiệt hại do sâu bệnh đều là thách thức lớn, ảnh hưởng đến năng suất và chất lượng sản phẩm."
                android:textSize="22sp"
                android:fontFamily="@font/lato"
                android:layout_marginHorizontal="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:text="Với mục tiêu giải quyết những thách thức trong sản xuất nông nghiệp, chúng tôi đã phát triển hệ thống phần mềm ứng dụng AI để nhận dạng tự động các loại nông sản quý hiếm và hỗ trợ người nông dân phát hiện sớm mầm bệnh trên cây trồng. Sứ mệnh của chúng tôi là nâng cao giá trị sản xuất và đảm bảo an toàn thực phẩm cho cộng đồng."
                android:textSize="22sp"
                android:fontFamily="@font/lato"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginVertical="30dp"
                android:layout_marginHorizontal="50dp"
                android:src="@drawable/img" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Giảng viên hướng dẫn"
                android:textSize="30sp"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giáo viên hướng dẫn qwertyuiopasd fghjkl;asdfghjklzxcvbnmqwertyuio sưedrftgyhujkqwertyuiasdfghjk"
                android:textSize="22sp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/lato" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>